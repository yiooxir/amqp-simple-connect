{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "noLib": false,
    "sourceMap": true,
    "declaration": false,
    "pretty": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es2015",
      "es2016"
    ],
    "baseUrl": "./",
    "paths": {
      "test/*":["./test/*"],
      "src/*": [ "./src/*" ],
      "src": ["./src"],
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules",
      "./src/interfaces"
    ],
    "types": [
      "mocha",
      "node",
      "chai"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "models",
    "data"
  ]
}